# Waltodo Docker Environment Configuration
# Copy this file to .env and adjust the values as needed

# Walrus Configuration
# Official Walrus testnet endpoints
WALRUS_AGGREGATOR_URL=https://aggregator.walrus-testnet.walrus.space
WALRUS_PUBLISHER_URL=https://publisher.walrus-testnet.walrus.space
WALRUS_TESTNET_URL=https://api.suiscan.xyz/testnet

# For local development with Walrus simulator
# WALRUS_AGGREGATOR_URL=http://walrus-simulator:8080
# WALRUS_PUBLISHER_URL=http://walrus-simulator:8081
# WALRUS_TESTNET_URL=http://walrus-simulator:8082

# Application Configuration
NODE_ENV=production
LOG_LEVEL=info
# LOG_LEVEL=debug  # Uncomment for verbose logging

# Data directories (mounted as volumes)
WALTODO_DATA_DIR=/app/data
WALTODO_CONFIG_DIR=/app/config

# Test Configuration
E2E_TEST_MODE=false
TEST_USER_ID=test-user
TEST_TIMEOUT=30

# Performance tuning
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT_MS=30000

# Security
ENABLE_ENCRYPTION=true
# ENCRYPTION_KEY=your-encryption-key-here  # Generate with: openssl rand -hex 32

# Debug Options
DEBUG_MODE=false
# DEBUG_MODE=true  # Uncomment to enable debug mode
VERBOSE_ERRORS=false
# VERBOSE_ERRORS=true  # Uncomment for detailed error messages

# Network Configuration
HTTP_PROXY=
HTTPS_PROXY=
NO_PROXY=localhost,127.0.0.1

# Container Configuration
CONTAINER_NAME=waltodo-app
COMPOSE_PROJECT_NAME=waltodo

# Development Options
# Mount source code for hot reload (requires rebuild)
# DEV_MODE=true
# WATCH_FILES=true

# Metrics and Monitoring (future feature)
# ENABLE_METRICS=true
# METRICS_PORT=9090

# Backup Configuration
# BACKUP_ENABLED=true
# BACKUP_INTERVAL=daily
# BACKUP_RETENTION_DAYS=30