{
  "name": "waltodo",
  "version": "1.0.0",
  "description": "A CLI todo application using Sui blockchain and Walrus storage",
  "main": "dist/index.js",
  "bin": {
    "waltodo": "bin/waltodo"
  },
  "scripts": {
    "prestart": "chmod +x ./bin/waltodo",
    "build": "tsc",
    "start": "ts-node src/index.ts",
    "dev": "ts-node src/index.ts",
    "clean": "rm -rf dist",
    "prepare": "npm run clean && npm run build",
    "link": "npm link",
    "test": "echo \"Error: no test specified\" && exit 1",
    "postinstall": "chmod +x ./bin/waltodo"
  },
  "keywords": [
    "cli",
    "todo",
    "sui",
    "blockchain",
    "walrus"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@inquirer/prompts": "^3.0.0",
    "@mysten/sui": "^1.28.2",
    "@mysten/sui.js": "^0.54.1",
    "@mysten/walrus": "latest",
    "@mysten/walrus-wasm": "latest",
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "dotenv": "^16.5.0",
    "inquirer": "^8.2.5"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.0"
  }
}
