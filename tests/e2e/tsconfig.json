{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "types": ["jest", "node"],
    "lib": ["es2022"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "."
  },
  "include": ["./**/*.ts", "./helpers/**/*.ts"],
  "exclude": ["dist", "node_modules"]
}
