{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
      "@tests/*": ["./__tests__/*"],
      "@types/*": ["./types/*"],
      "@utils/*": ["./utils/*"],
      "@services/*": ["./services/*"],
      "@commands/*": ["./commands/*"],
      "@adapters/*": ["./types/adapters/*"],
      "@errors/*": ["./types/errors/*"]
    },
    "typeRoots": ["../../node_modules/@types", "./src/types"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "noEmitOnError": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "strictPropertyInitialization": false
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts",
    "src/__tests__/**/*",
    "src/**/__tests__/**/*",
    "src/__mocks__/**/*"
  ]
}