{
  "name": "@waltodo/api",
  "version": "1.0.0",
  "description": "WalTodo API server with REST endpoints and WebSocket broadcasting",
  "main": "dist/index.js",
  "type": "commonjs",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "start": "node dist/index.js",
    "start:port": "node dist/index.js --port=",
    "dev": "ts-node src/index.ts",
    "dev:watch": "ts-node --transpile-only src/index.ts --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "clean": "rm -rf dist",
    "docker:build": "docker build -t waltodo-api .",
    "docker:run": "docker run -p 3000:3000 waltodo-api"
  },
  "dependencies": {
    "@waltodo/config-loader": "workspace:*",
    "@waltodo/shared-constants": "workspace:*",
    "@waltodo/sui-client": "workspace:*",
    "@waltodo/walrus-client": "workspace:*",
    "compression": "^1.7.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "express-validator": "^7.2.1",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.2",
    "socket.io": "^4.8.1",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "zod": "^3.25.12"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^22.15.21",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "eslint": "^8.57.1",
    "jest": "^29.6.3",
    "supertest": "^7.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=10.11.0"
  },
  "packageManager": "pnpm@10.11.0"
}